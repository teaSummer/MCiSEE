{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@comps/*": ["./src/components/*"],
      "@views/*": ["./src/views/*"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
      "@plugins/*": ["./src/plugins/*"],
    },

    "strict": true,
    "composite": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "lib": [
      "ESNext",
      "DOM",
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "components.d.ts",
    "vite-env.d.ts",
  ],
}
